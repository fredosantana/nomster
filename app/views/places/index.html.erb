<% @places.each do |place| %>
  <div class="booyah-box col-xs-10 col-xs-offset-1">
    <h1><%= link_to place.name, place_path(place) %></h1><br />
    <i><%= place.address %></i><br />
    <p><%= place.description %></p><br />

    <% if place.user.present? %>
      <small><%= place.user.email %></small>
    <% end %>

<!-- NoMethodError results because of this code; it was pulled from the show.html.erb page -->
    <div class="col-xs-12 col-sm-6">
        <blockquote>
            <% if place.comment.last.humanized_rating.present? %>
                <b><%= place.comment.last.humanized_rating %></b> - 
            <% end %>
                <%= place.comment.last.message %>
            <small><%= place.comment.last.user.email %></small>
        </blockquote>
    </div>
  </div>
<% end %>

<div class="digg_pagination col-xs-10 col-xs-offset-1">
        <ul><%= will_paginate @posts %></ul>
    </div>